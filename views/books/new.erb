<h1>Please enter the following details to add a new book to the inventory.</h1>

<div class="boxes_big">
  <div class="boxes">

    <table class="center">
      <form method="post" action="/books">
        <tr>
          <td>
            <label for="book-title">Title: </label>
            <input id="book-title" type="text" style="width: 250px;" name="title">
          </td>
          <td>
            <label for="book-author">Author: </label>
            <input list="authors" name="authors" style="width: 150px;">
              <datalist id="authors">
                <% for book in @books %>
                <option value="<%= book.author %>"></option>
                <% end %>
              </datalist>
          </td>
          <td>
            <label for="book-year">Publication year: </label>
            <input id="book-year" type="text" style="width: 100px;" name="publication_year">
          </td>
          <td>
            <label for="publisher-name">Publisher: </label>
            <input list="names" name="names" style="width: 150px;">
              <datalist id="names">
                <% for publisher in @publishers %>
                <option value="<%= publisher.name %>"></option>
                <% end %>
              </datalist>
          </td>
          <td>
            <label for="genre-name">Genre: </label>
            <input list="genres" name="genres" style="width: 150px;">
              <datalist id="genres">
                <% for genre in @genres %>
                <option value="<%= genre.name %>"></option>
                <% end %>
              </datalist>
          </td>
        </tr>
        <tr>
          <td>
              <label for="book-quantity">Quantity: </label>
              <input id="book-quantity" type="number" min="0" style="width: 75px;" name="quantity">
          </td>
          <td>
            <label for="book-cost_price">Wholesale price: £</label>
            <input id="book-cost_price" type="number" step="0.01" min="0" style="width: 50px;" name="wholesale_price">
          </td>
          <td>
            <label for="book-retail_price">Retail price: £</label>
            <input id="book-retail_price" type="number" step="0.01" min="0" style="width: 50px;" name="retail_price">
          </td>
        </tr>
        <tr>
          <td>
            <label for="book-url">Image: </label>
            <input id="book-url" type="text" style="width: 250px;" name="url">
          </td>
          <td>
            <label for="book-summary">Summary: </label>
            <input id="book-summary" type="text" style="width: 250px;" name="summary">
          </td>
          <td>
            <form method="post" action="/books">
            <input class="btn" type="submit" value="Add book">
          </td>
        </tr>
      </form>
    </table>
  </div>
</div>
