<h1>Complete <%= @genres.name %> book listing</h1>
<% for book in @books %>
<div class="row">
  <div class="col">
  <table class="center">
  <tr><td>Title: </td><td><%= book.title %></td></tr>
  <tr><td>Publisher: </td><td><%= book.publisher %></td></tr>
  <tr><td>Publication year: </td><td><%= book.publication_year %></td></tr>
  <tr><td>Author: </td><td><%= book.author %></td></tr>
  <tr><td>Genre: </td><td><%= book.genre %></td></tr>
  <tr><td>Quantity: </td><td class="<%= book.color() %>"><%= book.quantity %></td></tr>
  <tr><td>Wholesale price: </td><td>£<%= book.wholesale_price %></td></tr>
  <tr><td>Retail price: </td><td>£<%= book.retail_price %></td></tr>
  <tr><td>Markup: </td><td><%= book.markup() %>%</td></tr>
  <tr><td>Copies sold: </td><td><%= book.copies_sold() %></td></tr>
  <tr><td></td></tr>
  <tr><td></td></tr>
  </table>
  <tr><%= book.summary %></tr>
  </div>
   <img src="<%= book.image() %>">
 </div>
</div>
<table class="center">
  <tr><td></td></tr>
  <tr>
    <td>
      <form method="get" action="/books/<%= book.id %>/edit">
        <input class="btn" type="submit" value="Edit '<%= book.title() %>'">
      </form>
    </td>
    <td>
      <form method="post" action="/books/<%= book.id %>/delete">
        <input class="btn" type="submit" value="Remove '<%= book.title() %>' from inventory">
      </form>
    </td>
  </tr>
  <tr><td></td></tr>
  <tr><td></td></tr>
</table>
<% end %>
<td>
  <form method="get" action="/books">
    <input class="btn" type="submit" value="Back to books">
  </form>
</td>
